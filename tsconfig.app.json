{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "removeComments": true,
    "isolatedModules": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "global.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.cts",
    "src/**/*.mts"
  ],
  "exclude": [
    "**/*.spec.*"
  ]
}
